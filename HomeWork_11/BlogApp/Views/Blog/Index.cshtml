@{
    ViewData["Title"] = "Index";
}


<div class="container">
    <div class="row">
        @foreach (var item in ViewBag.blogList)
        {
            <div class="card" style="width: 18rem;">
                <img src="@item.Görsel" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text">@item.Özetİfade</p>
                </div>
            </div>
        }

    </div>
</div>
