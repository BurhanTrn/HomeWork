@model BlogApp.Models.ContactModel

@{
    ViewData["Title"] = "İletişim";
}

<h2>İletişim</h2>

<form asp-action="Index" method="post">
    <div class="form-group">
        <label>Ad Soyad</label>
        <input type="text" asp-for="AdSoyad" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="email" asp-for="Email" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Konu</label>
        <input type="text" asp-for="Konu" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Mesaj</label>
        <textarea asp-for="Mesaj" class="form-control" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Gönder</button>
</form>